<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/ex_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:text="---username---"
        android:width="180dp" />

    <TextView
        android:id="@+id/ex_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:gravity="center_vertical|right"
        android:text="--loc--"
        android:width="100dp" />

    <TextView
        android:id="@+id/ex_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ex_username"
        android:layout_toLeftOf="@+id/ex_upvote"
        android:ems="10"
        android:height="80dp"
        android:inputType="textMultiLine"
        android:text="---content---" />

    <TextView
        android:id="@+id/ex_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ex_content"
        android:ems="10"
        android:text="--tags--" />

    <ImageButton
        android:id="@+id/ex_downvote"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/ex_tags"
        android:layout_alignParentRight="true"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/arrow_down" />

    <ImageButton
        android:id="@+id/ex_upvote"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/ex_downvote"
        android:layout_toLeftOf="@+id/ex_downvote"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/arrow_up" />

    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ex_upvote"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/ex_content"
        android:background="#FFFFFF"
        android:src="@android:drawable/ic_delete" />

    <CheckBox
        android:id="@+id/ex_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ex_downvote"
        android:layout_alignParentRight="true" />

</RelativeLayout>